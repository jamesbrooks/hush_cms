!!! Strict
%html{html_attrs('en')}
  %head
    %title Hush CMS Administration
    %meta{'http-equiv' => 'content-type', 'content' => 'text/html;charset=utf-8'}
    %meta{'http-equiv' => 'Content-Style-Type', 'content' => 'text/css'}
    = stylesheet_link_tag 'hush_cms_admin'
    = javascript_include_tag 'prototype', 'effects', 'dragdrop', 'hush_cms_admin', :cache => 'hush_cms_admin_cached'
    
  %body
    #container
      %ul#navigation
        %li#nav-pages= link_to 'Pages', hush_cms_admin_pages_path
        %li#nav-posts= link_to 'Posts', hush_cms_admin_posts_path
      
      = yield
